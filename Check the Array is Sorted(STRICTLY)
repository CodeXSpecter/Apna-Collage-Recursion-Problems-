#CHECK THE ARRAY IS SORTED (STRICTLY SORTED)
#JAVA

class recursion {
    public static boolean isSorted(int arr[],int idx){
        if (idx==arr.length-1){
            return true;
        }
           if (arr[idx]<arr[idx+1]){
            return true ;
          }
          else{
            return false;
          }  
    }
    public static void main(String[] args) {
        int[] arr={1,2,3,4,5};//OUTPUT true
        System.out.println(isSorted(arr,0));
    }
}
